{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceRoot": "./src",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "removeComments": false,
    //"outDir": "./wwwroot",
    "noEmit": true,
    //"noEmitOnError": true,
    "noImplicitAny": false,
    "skipDefaultLibCheck": true,
    "lib": [ "es2015", "es2017", "dom" ], // es6, es8
    //"lib": [ "es6", "dom" ],
    //,
    //"types": [ "webpack-env" ]
    "allowJs": true,
    // Disallow features that require cross-file information for emit.
    "isolatedModules": false,
    // Import non-ES modules as default imports.
    "esModuleInterop": true
  },
  "exclude": [
    "bin",
    "node_modules",
    "wwwroot",
    "gulpfile.js",
    "webpack.config.js"
  ]
}
