@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.RoleId)
    @Html.HiddenFor(model => model.RowVersion)

<div class="form-horizontal" >
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-lg-2" style="padding-left:0px">Name</label>
        <div class="col-lg-10" style="padding-left:0px">
            @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-lg-2" style="padding-left:0px">Privileges</label>
        <div class="col-lg-10" style="padding-left:0px">
            @Html.ListBox("Privileges", ViewBag.PrivilegesMultiSelectList as MultiSelectList, new { @class = "form-control" })
            @Html.ValidationMessage("Privileges", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-lg-2" style="padding-left:0px">Groups</label>
        <div class="col-lg-10" style="padding-left:0px">
            @Html.ListBox("Groups", ViewBag.GroupsMultiSelectList as MultiSelectList, new { @class = "form-control" })
            @Html.ValidationMessage("Groups", "", new { @class = "text-danger" })
        </div>
    </div>

    <h4>Are you sure you want to save changes?</h4>
    <div class="form-group">
        <div class="col-lg-12" style="padding-left:0px">
            <input type="submit" value="Save" class="btn btn-secondary" />
        </div>
    </div>
</div>
}