@model Role

<h3>Delete Role (@Model.RoleId)</h3>

<h4>Are you sure you want to delete this?</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RoleName)
        </dd>

        <dt>
            Privileges
        </dt>

        <dd>
            @{ var privileges = Model.GetPrivileges();
                foreach (var p in privileges)
                {
                    <span class="dashboardcode-adminka-item">@Html.ActionLink(p.PrivilegeName, "Details", "Privileges", new { id = p.PrivilegeId }, null)</span>
                }
            }
        </dd>

        <dt>
            Groups
        </dt>

        <dd>
            @{ var groups = Model.GetGroups();
                foreach (var g in groups)
                {
                    <span class="dashboardcode-adminka-item">@Html.ActionLink(g.GroupName, "Details", "Groups", new { id = g.GroupId }, null)</span>
                }
            }
        </dd>

        <dt>
            Users
        </dt>

        <dd>
            @{ var users = Model.GetUsers();
                foreach (var u in users)
                {
                    <span class="dashboardcode-adminka-item">@Html.ActionLink(u.LoginName, "Details", "Users", new { id = u.UserId }, null)</span>
                }
            }
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.RoleId)
        @Html.HiddenFor(model => model.RowVersion)

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-secondary" /> | @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>