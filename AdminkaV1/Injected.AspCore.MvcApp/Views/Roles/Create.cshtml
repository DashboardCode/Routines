@model Role

<h3>Create Role</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="edit-role-name-id">Name</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @id = "edit-role-name-id", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
            </div>
        </div>
    
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="edit-privileges-id">Privileges</label>
            <div class="col-sm-10">
                @Html.ListBox("Privileges", ViewBag.PrivilegesMultiSelectList as MultiSelectList, new { @id = "edit-privileges-id", @class = "form-control" })
                @Html.ValidationMessage("Privileges", "", new { @class = "text-danger" })
            </div>
        </div>
    
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="edit-groups-id">Groups</label>
            <div class="col-sm-10">
                @Html.ListBox("Groups", ViewBag.GroupsMultiSelectList as MultiSelectList, new { @id = "edit-groups-id", @class = "form-control" })
                @Html.ValidationMessage("Groups", "", new { @class = "text-danger" })
            </div>
        </div>
    
        <h4>Are you sure you want to create this?</h4>
        <div class="form-group">
                <div class="d-flex flex-row align-self">
                    <input type="submit" value="Create" class="btn adminka-btn-ok" /> 
                    <a class="adminka-btn adminka-navigation-list mx-3" asp-area="" asp-controller="Roles" asp-action="Index">Back to List</a>
                </div>
        </div>
    </div>
}