@model IEnumerable<Role>
@{
    var UserContext = (UserContext)ViewBag.UserContext;
}
<h3 class="px-4">Roles</h3>

<table id="adminka-roles-table" class="table table-hover table-bordered mainTable">
    <thead>
        <tr>
            <th width="1rem">
            @if (UserContext.HasPrivilege(Privilege.ConfigureSystem))
            {
                var urlCreateAction = @Url.Action("Create", "Roles");
                <button type="button" class="btn-sm dashboardcode-btn-table dashboardcode-btn-table-th" onclick="location.href='@urlCreateAction'"><span class="material-icons">note_add</span></button>
            }
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleId)
            </th>
            <th>
                Name
            </th>
            <th>
                Privileges
            </th>
            <th>
                Groups
            </th>
            <th>
                Users
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var urlDetailsAction = @Url.Action("Details", "Roles", new { id = item.RoleId });
            var urlEditAction    = @Url.Action("Edit", "Roles", new { id = item.RoleId });
            var urlDeleteAction  = @Url.Action("Delete", "Roles", new { id = item.RoleId });
            <tr>
                <td class="tableActionColumn">
                    <button type="button" class="dashboardcode-btn-table btn-sm" onclick="location.href='@urlDetailsAction'"><span class="material-icons">insert_drive_file</span></button>
                    @if (UserContext.HasPrivilege(Privilege.ConfigureSystem))
                    {
                        <div class="dashboardcode-modify-buttons-panel">
                            <button type="button" class="dashboardcode-btn-table btn-xsm" onclick="location.href='@urlEditAction'"><span class="material-icons">edit</span></button>
                            <button type="button" class="dashboardcode-btn-table btn-xsm" onclick="location.href='@urlDeleteAction'"><span class="material-icons">delete</span></button>
                        </div>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    @{  var privileges = item.GetPrivileges();
                        foreach (var p in privileges)
                        {
                            <div><a class="dashboardcode-adminka-item" asp-area="" asp-controller="Privileges" asp-action="Details" asp-route-id="@p.PrivilegeId">@p.PrivilegeName</a></div>
                        }
                    }
                </td>
                <td>
                    @{  var groups = item.GetGroups();
                        foreach (var g in groups)
                        {
                            <div><a class="dashboardcode-adminka-item" asp-area="" asp-controller="Groups" asp-action="Details" asp-route-id="@g.GroupId">@g.GroupName</a></div>
                        }
                     }
                </td>
                <td>
                    @{  var users = item.GetUsers();
                        @foreach (var u in users)
                        {
                            <div><a class="dashboardcode-adminka-item" asp-area="" asp-controller="Users" asp-action="Details" asp-route-id="@u.UserId">@u.LoginName</a></div>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>