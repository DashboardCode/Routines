@model IEnumerable<Role>
@{
    var UserContext = (UserContext)ViewBag.UserContext;
}
<h3 class="px-3">Roles</h3>

<table id="adminka-roles-table" class="table table-hover table-bordered mainTable">
    <thead>
        <tr>
            <th class="adminka-action-button-group" width="1rem">
            @if (UserContext.HasPrivilege(Privilege.ConfigureSystem))
            {
                <a class="btn-sm" asp-area="" asp-controller="Roles" asp-action="Create"><span class="material-icons">note_add</span></a>
            }
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleId)
            </th>
            <th>
                Name
            </th>
            <th>
                Privileges
            </th>
            <th>
                Groups
            </th>
            <th>
                Users
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="adminka-action-button-group">
                    <div class="d-flex flex-row" >
                        <a class="btn-sm" asp-area="" asp-controller="Roles" asp-action="Details" asp-route-id="@item.RoleId"><span class="material-icons">insert_drive_file</span></a>
                        @if (UserContext.HasPrivilege(Privilege.ConfigureSystem))
                        {
                            <div class="d-flex flex-column">
                                <a class="btn-xsm" asp-area="" asp-controller="Roles" asp-action="Edit" asp-route-id="@item.RoleId"><span class="material-icons">edit</span></a>
                                <a class="btn-xsm" asp-area="" asp-controller="Roles" asp-action="Delete" asp-route-id="@item.RoleId"><span class="material-icons">delete</span></a>
                            </div>
                        }
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    @foreach (var p in item.GetPrivileges())
                    {
                        <a class="badge" asp-area="" asp-controller="Privileges" asp-action="Details" asp-route-id="@p.PrivilegeId">@p.PrivilegeName</a>
                    }
                </td>
                <td>
                    @foreach (var g in item.GetGroups())
                    {
                        <a class="badge" asp-area="" asp-controller="Groups" asp-action="Details" asp-route-id="@g.GroupId">@g.GroupName</a>
                    }
                </td>
                <td>
                    @foreach (var u in item.GetUsers())
                    {
                        <a class="badge" asp-area="" asp-controller="Users" asp-action="Details" asp-route-id="@u.UserId">@u.LoginName</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>