@model IEnumerable<Group>
@{
    var UserContext = (UserContext)ViewBag.UserContext;
}
<h3 class="px-4">Groups</h3>

<table id="adminka-groups-table" class="table table-hover table-bordered mainTable">
    <thead>
        <tr>
            <th width="1rem"> @*24px*@
            @if (UserContext.HasPrivilege(Privilege.ConfigureSystem))
            {
                var urlCreateAction = @Url.Action("Create", "Groups");
                <button class="dashboardcode-btn-table dashboardcode-btn-table-th btn-sm" onclick="location.href='@urlCreateAction'"><span class="material-icons">note_add</span></button>
            }
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GroupId)
            </th>
            <th>
                Name
            </th>
            <th>
                AD Group
            </th>
            <th>
                Privileges
            </th>
            <th>
                Roles
            </th>
            <th>
                Users
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var urlDetailsAction = @Url.Action("Details", "Groups", new { id = item.GroupId });
            var urlEditAction = @Url.Action("Edit", "Groups", new { id = item.GroupId });
            var urlDeleteAction = @Url.Action("Delete", "Groups", new { id = item.GroupId });
            <tr>
                <td class="tableActionColumn">
                    <button type="button" class="dashboardcode-btn-table btn-sm" onclick="location.href='@urlDetailsAction'"><span class="material-icons">insert_drive_file</span></button>
                    @if (UserContext.HasPrivilege(Privilege.ConfigureSystem))
                    {
                        <div class="dashboardcode-modify-buttons-panel">
                            <button type="button" class="dashboardcode-btn-table btn-xsm" onclick="location.href='@urlEditAction'"><span class="material-icons">edit</span></button>
                            <button type="button" class="dashboardcode-btn-table btn-xsm" onclick="location.href='@urlDeleteAction'"><span class="material-icons">delete</span></button>
                        </div>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupAdName)
                </td>
                <td>
                    @{  var privileges = item.GetPrivileges();
                        foreach (var p in privileges)
                        {
                            
                            <div><a class="dashboardcode-adminka-item" asp-area="" asp-controller="Privileges" asp-action="Details" asp-route-id="@p.PrivilegeId">@p.PrivilegeName</a></div>
                        }
                    }
                </td>
                <td>
                    @{  var roles = item.GetRoles();
                        foreach (var r in roles)
                        {
                        <div><a class="dashboardcode-adminka-item" asp-area="" asp-controller="Roles" asp-action="Details" asp-route-id="@r.RoleId">@r.RoleName</a></div>
                        }
                     }
                </td>
                <td>
                    @{  var users = item.GetUsers();
                        @foreach (var u in users)
                        {
                            <div><a class="dashboardcode-adminka-item" asp-area="" asp-controller="Users" asp-action="Details" asp-route-id="@u.UserId">@u.LoginName</a></div>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>