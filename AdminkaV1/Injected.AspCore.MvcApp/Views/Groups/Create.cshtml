@model Group

<div class="d-flex flex-row justify-content-between align-self">
    <h3>Create Group</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="create-group-name-id">Name</label>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.GroupName, new { htmlAttributes = new { @id = "create-group-name-id", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GroupName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="create-group-ad-name-id">AD Group</label>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.GroupAdName, new { htmlAttributes = new { @id = "create-group-ad-name-id", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GroupAdName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="create-group-privileges-id">Privileges Allowed</label>
        <div class="col-sm-10">
            @Html.ListBox("PrivilegesAllowed", ViewBag.PrivilegesAllowedMultiSelectList as MultiSelectList, new { @id = "create-group-privileges-allowed-id", @class = "form-control d-none bootstrap-multiselect" })
            @Html.ValidationMessage("PrivilegesAllowed", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group adminka-form-group-bsmultiselect-scratched row">
        <label class="col-form-label col-sm-2" for="create-group-privileges-id">Privileges Denied</label>
        <div class="col-sm-10">
            @Html.ListBox("PrivilegesDenied", ViewBag.PrivilegesDeniedMultiSelectList as MultiSelectList, new { @id = "create-group-privileges-denied-id", @class = "form-control d-none bootstrap-multiselect" })
            @Html.ValidationMessage("PrivilegesDenied", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="create-group-roles-id">Roles</label>
        <div class="col-sm-10">
            @Html.ListBox("Roles", ViewBag.RolesMultiSelectList as MultiSelectList, new { @id = "create-group-roles-id", @class = "form-control d-none bootstrap-multiselect" })
            @Html.ValidationMessage("Roles", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="create-group-users-id">Users</label>
        <div class="col-sm-10">
            @Html.ListBox("Users", ViewBag.UsersMultiSelectList as MultiSelectList, new { @id = "create-group-users-id", @readonly = "readonly", @disabled = "disabled", @class = "form-control d-none bootstrap-multiselect" })
            @Html.ValidationMessage("Users", "", new { @class = "text-danger" })
        </div>
    </div>

    <h4>Are you sure you want to create this?</h4>
    <div class="form-group">
        <div class="d-flex flex-row align-self">
            <input type="submit" value="Create" class="btn adminka-btn-ok" />
            <a class="adminka-btn adminka-navigation-list mx-3" asp-area="" asp-controller="Groups" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
}
@section scripts {
    <script type="text/javascript">
        (function () {
            var select = $('.bootstrap-multiselect').bsMultiSelect();
         })();
    </script>
}