@model Group

<h3 class="px-3">Create Group</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-lg-2">Name</label>
            <div class="col-lg-10">
                @Html.EditorFor(model => model.GroupName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GroupName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-lg-2">AD Group</label>
            <div class="col-lg-10">
                @Html.EditorFor(model => model.GroupAdName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GroupAdName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Privileges", "Privileges", htmlAttributes: new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.ListBox("Privileges", ViewBag.PrivilegesMultiSelectList as MultiSelectList, new { @class = "form-control" })
                @Html.ValidationMessage("Privileges", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Roles", "Roles", htmlAttributes: new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.ListBox("Roles", ViewBag.RolesMultiSelectList as MultiSelectList, new { @class = "form-control" })
                @Html.ValidationMessage("Roles", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Users", "Users", htmlAttributes: new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.ListBox("Users", ViewBag.UsersMultiSelectList as MultiSelectList, new { @class = "form-control" })
                @Html.ValidationMessage("Users", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-12">
                <input type="submit" value="Create" class="btn btn-secondary" />  | @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}