@model Group

<div class="d-flex flex-row justify-content-between align-self">
    <h3>Group (@Model.GroupId)</h3>
    <a class="adminka-navigation adminka-navigation-clear" asp-area="" asp-controller="Groups" asp-action="Details" asp-route-id="@Model.GroupId"></a>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.GroupId)
    @Html.HiddenFor(model => model.RowVersion)

<div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="edit-group-name-id">Name</label>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.GroupName, new { htmlAttributes = new { @id = "edit-group-name-id", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GroupName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="edit-group-ad-name-id">AD Group</label>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.GroupAdName, new { htmlAttributes = new { @id = "edit-group-ad-name-id", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GroupAdName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="edit-group-privileges-id">Privileges</label>
        <div class="col-sm-10">
            @Html.ListBox("Privileges", ViewBag.PrivilegesMultiSelectList as MultiSelectList, new { @id = "edit-group-privileges-id", @class = "form-control d-none bootstrap-multiselect" })
            @Html.ValidationMessage("Privileges", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="edit-group-roles-id">Roles</label>
        <div class="col-sm-10">
            @Html.ListBox("Roles", ViewBag.RolesMultiSelectList as MultiSelectList, new { @id = "edit-group-roles-id", @class = "form-control d-none bootstrap-multiselect" })
            @Html.ValidationMessage("Roles", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="edit-group-users-id">Users</label>
        <div class="col-sm-10">
            @Html.ListBox("Users", ViewBag.UsersMultiSelectList as MultiSelectList, new { @id = "edit-group-users-id", @readonly = "readonly", @disabled = "disabled", @class = "form-control d-none bootstrap-multiselect" })
            @Html.ValidationMessage("Users", "", new { @class = "text-danger" })
        </div>
    </div>

    <h4>Are you sure you want to save changes?</h4>
    <div class="form-group">
        <div class="d-flex flex-row align-self">
            <input type="submit" value="Save" class="btn adminka-btn-ok" />
            <a class="adminka-btn adminka-navigation-list mx-3" asp-area="" asp-controller="Groups" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
}
@section scripts {
    <script type="text/javascript">
        (function () {
            var select = $('.bootstrap-multiselect').dashboardCodeBsMultiSelect();
        })();
    </script>
}