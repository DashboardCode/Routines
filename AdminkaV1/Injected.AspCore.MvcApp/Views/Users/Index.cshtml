@model IEnumerable<User>
@{
    var UserContext = (UserContext)ViewBag.UserContext;
    var tableId = "adminka-users-table-id";
}
<h3 class="px-3">Users</h3>

<table id="@tableId" class="table table-hover table-bordered mainTable">
    <thead>
        <tr>
            <th width="1rem">
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                Login
            </th>
            <th>
                First Name
            </th>
            <th>
                Second Name
            </th>
            <th>
                Roles
            </th>
            <th>
                Privileges
            </th>
            <th>
                Groups
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="adminka-action-button-group">
                    <div class="d-flex flex-row">
                        <a class="btn-sm" asp-area="" asp-controller="Users" asp-action="Details" asp-route-id="@item.UserId"><span class="material-icons">insert_drive_file</span></a>
                        @if (UserContext.HasPrivilege(Privilege.ConfigureSystem))
                        {
                            <div class="d-flex flex-column">
                                <a class="btn-xsm" asp-area="" asp-controller="Users" asp-action="Edit" asp-route-id="@item.UserId"><span class="material-icons">edit</span></a>
                            </div>
                        }
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoginName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecondName)
                </td>
                <td>
                    
                    @foreach (var r in item.GetRoles())
                    {
                        <a class="badge" asp-area="" asp-controller="Roles" asp-action="Details" asp-route-id="@r.RoleId">@r.RoleName</a>
                    }
                </td>
                <td>
                    @foreach (var p in item.GetPrivileges())
                    {
                        if (p.Item2)
                        {
                            <a class="badge" asp-area="" asp-controller="Privileges" asp-action="Details" asp-route-id="@p.Item1.PrivilegeId">@p.Item1.PrivilegeName</a>
                        }
                        else
                        {
                            <a style="text-decoration:line-through" class="badge" asp-area="" asp-controller="Privileges" asp-action="Details" asp-route-id="@p.Item1.PrivilegeId">@p.Item1.PrivilegeName</a>
                        }
                    }
                </td>
                <td>
                    @foreach (var g in item.GetGroups())
                    {
                        <a class="badge" asp-area="" asp-controller="Groups" asp-action="Details" asp-route-id="@g.GroupId">@g.GroupName</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var tableId = '#' + '@tableId';
            var $table = $(tableId).dataTable(
                {
                    language: { search: "", searchPlaceholder: "Filter", lengthMenu:"_MENU_" },
                    stateSave: true,
                    dom: '<"d-flex flex-row justify-content-end"f>rt<"d-flex flex-row justify-content-between"lp>',
                    "columnDefs": [
                        { "searchable": false, "targets": 0 },
                        { "orderable": false, "targets": 0 }
                    ]
                }
            );
        });
    </script>
}