@model User

<h3 class="px-3">Edit User (@Model.UserId)</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.RowVersion)
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-lg-2">Login</label>
            <div class="col-lg-10">
                @Html.EditorFor(model => model.LoginName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.LoginName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-lg-2">First Name</label>
            <div class="col-lg-10">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-lg-2">Second Name</label>
            <div class="col-lg-10">
                @Html.EditorFor(model => model.SecondName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.SecondName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Privileges", "Privileges", htmlAttributes: new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.ListBox("Privileges", ViewBag.PrivilegesMultiSelectList as MultiSelectList, new { @class = "form-control" })
                @Html.ValidationMessage("Privileges", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Roles", "Roles", htmlAttributes: new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.ListBox("Roles", ViewBag.RolesMultiSelectList as MultiSelectList, new { @class = "form-control" })
                @Html.ValidationMessage("Roles", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Groups", "Groups", htmlAttributes: new { @class = "control-label col-lg-2" })
            <div class="col-lg-10">
                @Html.ListBox("Groups", ViewBag.GroupsMultiSelectList as MultiSelectList, new { @class = "form-control", @readonly = "readonly", @disabled = "disabled" })
                @Html.ValidationMessage("Groups", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-auto col-lg-10">
                <input type="submit" value="Save" class="btn btn-secondary" /> | @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}