@page
@model DashboardCode.AdminkaV1.Injected.AspCore.MvcApp.Areas.Auth.Pages.GroupEditModel
@{
    ViewData["SubTitle"] = "Edit Group";
}

<div class="d-flex flex-row justify-content-between align-self">
    <h3>Group (@Model.Id)</h3>
    <a class="adminka-navigation adminka-navigation-clear" asp-area="" asp-controller="Groups" asp-action="Details" asp-route-id="@Model.Id"></a>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Entity.GroupId)
    @Html.HiddenFor(model => model.Entity.RowVersion)

<div>
    <hr />
    @section Messages{
        @if (!Model.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="container alert alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
        }
    }

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="edit-group-name-id">Name</label>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.Entity.GroupName, new { htmlAttributes = new { @id = "edit-group-name-id", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Entity.GroupName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="edit-group-ad-name-id">AD Group</label>
        <div class="col-sm-10">
            @Html.EditorFor(model => model.Entity.GroupAdName, new { htmlAttributes = new { @id = "edit-group-ad-name-id", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Entity.GroupAdName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="edit-group-privileges-allowed-id">Privileges Allowed</label>
        <div class="col-sm-10">
            @Html.ListBox("PrivilegesAllowed", ViewBag.PrivilegesAllowedMultiSelectList as MultiSelectList, new { @id = "edit-group-privileges-allowed-id", @class = "form-control d-none bootstrap-multiselect" })
            @Html.ValidationMessage("PrivilegesAllowed", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row  adminka-form-group-bsmultiselect-scratched">
        <label class="col-form-label col-sm-2" for="edit-group-privileges-denied-id">Privileges Denied</label>
        <div class="col-sm-10">
            @Html.ListBox("PrivilegesDenied", ViewBag.PrivilegesDeniedMultiSelectList as MultiSelectList, new { @id = "edit-group-privileges-denied-id", @class = "form-control d-none bootstrap-multiselect" })
            @Html.ValidationMessage("PrivilegesDenied", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="edit-group-roles-id">Roles</label>
        <div class="col-sm-10">
            @Html.ListBox("Roles", ViewBag.RolesMultiSelectList as MultiSelectList, new { @id = "edit-group-roles-id", @class = "form-control d-none bootstrap-multiselect" })
            @Html.ValidationMessage("Roles", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-2" for="edit-group-users-id">Users</label>
        <div class="col-sm-10">
            @Html.ListBox("Users", ViewBag.UsersMultiSelectList as MultiSelectList, new { @id = "edit-group-users-id", @readonly = "readonly", @disabled = "disabled", @class = "form-control d-none bootstrap-multiselect" })
            @Html.ValidationMessage("Users", "", new { @class = "text-danger" })
        </div>
    </div>

    <h4>Are you sure you want to save changes?</h4>
    <div class="form-group">
        <div class="d-flex flex-row align-self">
            <input type="submit" value="Save" class="btn adminka-btn-ok" />
            <a class="adminka-btn adminka-navigation-list mx-3" asp-area="" asp-controller="Groups" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
}
@section scripts {
    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function (event) {
            (function () {
                var select = $('.bootstrap-multiselect').bsMultiSelect();
            })();
        });
    </script>
}
