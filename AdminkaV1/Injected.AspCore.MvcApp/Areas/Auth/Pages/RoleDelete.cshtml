@page
@model DashboardCode.AdminkaV1.Injected.AspCore.MvcApp.Areas.Auth.Pages.RoleDeleteModel
@{
    ViewData["SubTitle"] = $"Delete Role ({@Model.Entity.RoleId})";
}

<div class="adminka-panel">
    <div class="adminka-title d-flex flex-row justify-content-between align-items-center">
        <h3>Role (@Model.Entity.RoleId)</h3>
        <a class="adminka-navigation adminka-icon-before adminka-icon-before-clear" asp-area="Auth" asp-page="Role" asp-route-id="@Model.Entity.RoleId" asp-route-Referrer="@Model.Crud.Referrer.Internal"></a>
    </div>

    <div class="adminka-container">
        <dl class="row">
            <dt class="col-sm-2 mb-sm-4" style="font-weight:normal">
                Name
            </dt>

            <dd class="col-sm-10 mb-sm-4">
                @Html.DisplayFor(model => model.Entity.RoleName)
            </dd>

            @{var privleges = Model.Entity.GetPrivileges();}
            <dt class="col-sm-2 mb-sm-4">
                Privileges Allowed
            </dt>
            <dd class="col-sm-10 mb-sm-4">
                @foreach (var p in Model.Entity.GetPrivileges())
                {
                    if (p.Item2)
                    {
                        <a class="badge" asp-area="Auth" asp-page="Privilege" asp-route-id="@p.Item1.PrivilegeId">@p.Item1.PrivilegeName</a>
                    }
                }
            </dd>

            <dt class="col-sm-2 mb-sm-4">
                Privileges Denied
            </dt>

            <dd class="col-sm-10 mb-sm-4">
                @foreach (var p in Model.Entity.GetPrivileges())
                {
                    if (!p.Item2)
                    {
                        <a class="badge scratched" asp-area="Auth" asp-page="Privilege" asp-route-id="@p.Item1.PrivilegeId">@p.Item1.PrivilegeName</a>
                    }
                }
            </dd>

            <dt class="col-sm-2 mb-sm-4" style="font-weight:normal">
                Groups
            </dt>

            <dd class="col-sm-9 mb-sm-4">
                @foreach (var g in Model.Entity.GetGroups())
                {
                    <a class="badge" asp-area="Auth" asp-page="Group" asp-route-id="@g.GroupId">@g.GroupName</a>
                }
            </dd>

            <dt class="col-sm-2 mb-sm-4" style="font-weight:normal">
                Users
            </dt>

            <dd class="col-sm-10 mb-sm-2">
                @foreach (var u in Model.Entity.GetUsers())
                {
                    <a class="badge" asp-area="Auth" asp-page="User" asp-route-id="@u.UserId">@u.LoginName</a>
                }
            </dd>
        </dl>

        <form method="post">
            <input hidden type="hidden" asp-for="@Model.Entity.RoleId" />
            <input hidden type="hidden" asp-for="@Model.Entity.RowVersion" />
            <input hidden type="hidden" asp-for="@Model.Crud.Referrer.GoBack" name="Referrer" />

            <div class="adminka-buttons adminka-buttons-delete">
                <div class="form-group">
                    <div class="d-flex flex-row">
                        <button type="submit" class="btn btn-primary">Delete</button>
                        <a class="btn btn-secondary adminka-icon-before adminka-icon-before-back ml-3" href="@Model.Crud.Referrer.GoBack">Go Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>