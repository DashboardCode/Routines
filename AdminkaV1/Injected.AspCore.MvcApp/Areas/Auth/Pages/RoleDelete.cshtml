@page
@model DashboardCode.AdminkaV1.Injected.AspCore.MvcApp.Areas.Auth.Pages.RoleDeleteModel
@{
    ViewData["SubTitle"] = "Delete Role";
}


<div class="d-flex flex-row justify-content-between align-self">
    <h3>Role (@Model.Entity.RoleId)</h3>
    <a class="adminka-navigation adminka-navigation-clear" asp-area="Auth" asp-page="Role" asp-route-id="@Model.Entity.RoleId"></a>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 mb-sm-4" style="font-weight:normal">
            Name
        </dt>

        <dd class="col-sm-10 mb-sm-4">
            @Html.DisplayFor(model => model.Entity.RoleName)
        </dd>

        @{var privleges = Model.Entity.GetPrivileges();}
        <dt class="col-sm-2 mb-sm-4">
            Privileges Allowed
        </dt>
        <dd class="col-sm-10 mb-sm-4">
            @foreach (var p in Model.Entity.GetPrivileges())
            {
                if (p.Item2)
                {
                    <a class="badge" asp-area="Auth" asp-page="Privilege" asp-route-id="@p.Item1.PrivilegeId">@p.Item1.PrivilegeName</a>
                }
            }
        </dd>

        <dt class="col-sm-2 mb-sm-4">
            Privileges Denied
        </dt>

        <dd class="col-sm-10 mb-sm-4">
            @foreach (var p in Model.Entity.GetPrivileges())
            {
                if (!p.Item2)
                {
                    <a class="badge scratched" asp-area="Auth" asp-page="Privilege" asp-route-id="@p.Item1.PrivilegeId">@p.Item1.PrivilegeName</a>
                }
            }
        </dd>

        <dt class="col-sm-2 mb-sm-4" style="font-weight:normal">
            Groups
        </dt>

        <dd class="col-sm-9 mb-sm-4">
            @foreach (var g in Model.Entity.GetGroups())
            {
                <a class="badge" asp-area="Auth" asp-page="Group" asp-route-id="@g.GroupId">@g.GroupName</a>
            }
        </dd>

        <dt class="col-sm-2 mb-sm-4" style="font-weight:normal">
            Users
        </dt>

        <dd class="col-sm-10 mb-sm-2">
            @foreach (var u in Model.Entity.GetUsers())
            {
                <a class="badge" asp-area="Auth" asp-page="User" asp-route-id="@u.UserId">@u.LoginName</a>
            }
        </dd>
    </dl>

    <h4>Are you sure you want to delete this?</h4>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Entity.RoleId)
        @Html.HiddenFor(model => model.Entity.RowVersion)
        <input asp-for="@Model.BackwardUrl" hidden class="form-control" type="search" />

        <div class="form-group">
            <div class="d-flex flex-row align-self">
                <input type="submit" value="Delete" class="btn adminka-btn-ok" />
                <a class="adminka-btn adminka-navigation-back mx-3" href="@Model.BackwardUrl">Go Back</a>
            </div>
        </div>
    }
</div>